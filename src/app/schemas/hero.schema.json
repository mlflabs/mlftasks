{
  "title": "hero schema",
  "description": "describes a simple hero",
  "version": 0,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "primary": true
    },
    "color": {
      "type": "string"
    },
    "maxHP": {
      "type": "number",
      "min": 0,
      "max": 1000
    },
    "hp": {
      "type": "number",
